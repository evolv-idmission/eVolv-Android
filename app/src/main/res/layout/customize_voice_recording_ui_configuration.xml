<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/voice_button_color"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/config_edit_text_size" />

                <EditText
                    android:id="@+id/voice_button_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_sheet_edit_box_style"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="@dimen/config_edit_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/transparency"
                    android:textSize="@dimen/config_edit_text_size" />

                <EditText
                    android:id="@+id/voice_button_color_alpha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_sheet_edit_box_style"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="@dimen/config_edit_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/voice_background_color"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/config_edit_text_size" />

                <EditText
                    android:id="@+id/voice_background_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_sheet_edit_box_style"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="@dimen/config_edit_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/transparency"
                    android:textSize="@dimen/config_edit_text_size" />

                <EditText
                    android:id="@+id/voice_background_color_alpha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_sheet_edit_box_style"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="@dimen/config_edit_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/voice_text_label_color"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/config_edit_text_size" />

                <EditText
                    android:id="@+id/voice_text_label_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_sheet_edit_box_style"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="@dimen/config_edit_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/transparency"
                    android:textSize="@dimen/config_edit_text_size" />

                <EditText
                    android:id="@+id/voice_text_label_color_alpha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_sheet_edit_box_style"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="@dimen/config_edit_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/voice_title_label_color"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/config_edit_text_size" />

                <EditText
                    android:id="@+id/voice_title_label_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_sheet_edit_box_style"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="@dimen/config_edit_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/transparency"
                    android:textSize="@dimen/config_edit_text_size" />

                <EditText
                    android:id="@+id/voice_title_label_color_alpha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_sheet_edit_box_style"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="@dimen/config_edit_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/voice_title_label_size"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/config_edit_text_size" />

                <EditText
                    android:id="@+id/voice_title_label_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_sheet_edit_box_style"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="@dimen/config_edit_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/voice_text_label_size"
                    android:textSize="@dimen/config_edit_text_size" />

                <EditText
                    android:id="@+id/voice_text_label_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_sheet_edit_box_style"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="@dimen/config_edit_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/voice_counter_label_size"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/config_edit_text_size" />

                <EditText
                    android:id="@+id/voice_counter_label_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_sheet_edit_box_style"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textSize="@dimen/config_edit_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/voice_display_position"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/config_edit_text_size" />

                <Spinner
                    android:id="@+id/voice_display_position_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/spinner_style" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/voice_title_label_on_top"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/config_edit_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="@string/no"
                        android:textColor="@color/black"
                        android:textSize="@dimen/config_toggle_button_size" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/voice_title_label_on_top_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:checked="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:theme="@style/SwitchStyle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/yes"
                        android:textColor="@color/black"
                        android:textSize="@dimen/config_toggle_button_size" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/voice_recording_label"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/config_edit_text_size" />

                <Spinner
                    android:id="@+id/spinner_label_type"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/spinner_style"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.8"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_value"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/config_edit_text_size" />

                    <EditText
                        android:id="@+id/label_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_sheet_edit_box_style"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:textSize="@dimen/config_edit_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/voice_add_label_button"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/button_style"
                        android:padding="5dp"
                        android:text="@string/add"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/voice_auto_play"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/config_edit_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="@string/no"
                        android:textColor="@color/black"
                        android:textSize="@dimen/config_toggle_button_size" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/auto_play_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:checked="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:theme="@style/SwitchStyle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/yes"
                        android:textColor="@color/black"
                        android:textSize="@dimen/config_toggle_button_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>